generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  email          String        @unique
  name           String
  role           String?
  hashedPassword String?
  picture        String?
  createdAt      DateTime      @default(now())
  session        Session[]
  googleTokens   GoogleTokens?
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id])
}

model GoogleTokens {
  id     Int    @id @default(autoincrement())
  userId String @unique

  accessToken String

  idToken String

  scope String

  tokenType String

  expiryDate DateTime

  user User @relation(fields: [userId], references: [id])
}
